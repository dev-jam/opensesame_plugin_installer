define sequence installer_sequence
	set flush_keyboard yes
	set description "Runs a number of items in sequence"
	run question always
	run execute always

define sequence plugin_installer
	set flush_keyboard yes
	set description "Runs a number of items in sequence"
	run welcome always
	run installer_loop always
	run done always

